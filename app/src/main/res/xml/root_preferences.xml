<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="SERVER SETTINGS">

        <EditTextPreference
            app:key="server"
            app:title="SERVER"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="user"
            app:title="USER"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="password"
            app:title="PASSWORD"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="database"
            app:title="DATABASE"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>